<!DOCTYPE html>
<html>
  <head>
    <title>Supertrampapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'favicon.ico' %>
    
    <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key='+Rails.application.credentials.PLACES_API_KEY %>
    <meta property="og:title" content="Super Tramp"/>
    <meta property="og:image" content="<%= image_url('/supertrampapp/app/assets/images/featured.png') %>"/>
    
    <meta property="og:description" content="Camp near or in your favorite parks, where available, anywhere around the world!" />
    <meta property="og:url" content="https://supertrampapp.herokuapp.com/"/>
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RKGVWK9V85"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-RKGVWK9V85');
    </script>

  </head>
  <body>
    <%= yield %>
  </body>
</html>
